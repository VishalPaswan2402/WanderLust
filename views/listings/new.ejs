<%=layout("/layouts/boilerplate")%>
<div class="row">
    <div class="col-8 offset-2">
        <br>
        <h3>Create a new Listing</h3>
        <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
            <div class="mb-3">
                <lable for="title" class="form-label">Title</lable>
                <input name="listing[title]" placeholder="Add a catchy title" type="text" class="form-control" required>
                <div class="valid-feedback">Title looks good!</div>
                <div class="invalid-feedback">Please enter a catchy title</div>
            </div>

            <div class="mb-3">
                <lable for="description" class="form-label">Description</lable>
                <textarea name="listing[description]" type="text" class="form-control" required></textarea>
                <div class="valid-feedback">Description looks good!</div>
                <div class="invalid-feedback">Please enter a description</div>
            </div>
        
            <div class="mb-3">
                <lable for="image" class="form-label">Upload Listing Image</lable>
                <input name="listing[image]" type="file" class="form-control">
            </div>

            <div class="row">
                <div class="mb-3 col-md-4">
                    <lable for="price" class="form-label">Price</lable>
                    <input name="listing[price]" placeholder="3000" class="form-control" required>
                    <div class="invalid-feedback">Please enter a valid price</div>
                </div>
    
                <div class="mb-3 col-md-8">
                    <lable for="country" class="form-label">Country</lable>
                    <input name="listing[country]" placeholder="India" type="text" class="form-control" required>
                    <div class="invalid-feedback">Please enter a valid country</div>
                </div>
            </div>

            <div class="mb-3">
                <lable for="location" class="form-label">Location</lable>
                <input name="listing[location]" placeholder="Chennai" type="text" class="form-control" required>
                <div class="invalid-feedback">Please enter a valid location</div>
            </div>
            <button class="btn btn-dark add-btn">Add Listing</button>
            <br>
            <br>
        </form>
    </div>
</div>
